<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/total_students_num"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/summary_count_textview_background"
        android:gravity="center"
        android:text="1234"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/on_screen_students_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/on_screen_students_num"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/summary_count_textview_background"
        android:gravity="center"
        android:text="1234"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/present_students_num"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/total_students_num" />

    <TextView
        android:id="@+id/present_students_num"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/summary_count_textview_background"
        android:gravity="center"
        android:text="1234"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/on_screen_students_num" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/total_students_display"
        app:layout_constraintBottom_toBottomOf="@+id/total_students_num"
        app:layout_constraintStart_toEndOf="@+id/total_students_num"
        app:layout_constraintTop_toTopOf="@+id/total_students_num" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/students_using_ocms_display"
        app:layout_constraintBottom_toBottomOf="@+id/on_screen_students_num"
        app:layout_constraintStart_toEndOf="@+id/on_screen_students_num"
        app:layout_constraintTop_toTopOf="@+id/on_screen_students_num" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:text="@string/students_attending_lecture_display"
        app:layout_constraintBottom_toBottomOf="@+id/present_students_num"
        app:layout_constraintStart_toEndOf="@+id/present_students_num"
        app:layout_constraintTop_toTopOf="@+id/present_students_num" />

</androidx.constraintlayout.widget.ConstraintLayout>